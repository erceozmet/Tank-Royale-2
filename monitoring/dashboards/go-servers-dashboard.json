{
  "id": null,
  "uid": "go-servers-overview",
  "title": "Tank Royale 2 - Go Servers",
  "tags": ["tank-royale", "go", "monitoring"],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "10s",
  "panels": [
    {
      "id": 1,
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
      "type": "timeseries",
      "title": "HTTP Request Rate",
      "targets": [
        {
          "expr": "rate(http_requests_total{job=~\"tank-royale-api|tank-royale-game\"}[5m])",
          "legendFormat": "{{job}} - {{method}} {{path}} [{{status_code}}]",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "linear",
            "fillOpacity": 10
          }
        }
      }
    },
    {
      "id": 2,
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
      "type": "timeseries",
      "title": "HTTP Request Duration (p95)",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket{job=~\"tank-royale-api|tank-royale-game\"}[5m]))",
          "legendFormat": "{{job}} - {{method}} {{path}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "linear",
            "fillOpacity": 10
          }
        }
      }
    },
    {
      "id": 3,
      "gridPos": {"h": 6, "w": 6, "x": 0, "y": 8},
      "type": "stat",
      "title": "Active Players",
      "targets": [
        {
          "expr": "game_players_active",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": 0, "color": "red"},
              {"value": 1, "color": "yellow"},
              {"value": 10, "color": "green"}
            ]
          }
        }
      }
    },
    {
      "id": 4,
      "gridPos": {"h": 6, "w": 6, "x": 6, "y": 8},
      "type": "stat",
      "title": "Active Game Rooms",
      "targets": [
        {
          "expr": "game_rooms_active",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": 0, "color": "red"},
              {"value": 1, "color": "green"}
            ]
          }
        }
      }
    },
    {
      "id": 5,
      "gridPos": {"h": 6, "w": 6, "x": 12, "y": 8},
      "type": "stat",
      "title": "Total Games Played",
      "targets": [
        {
          "expr": "games_total",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": {
            "mode": "palette-classic"
          }
        }
      }
    },
    {
      "id": 6,
      "gridPos": {"h": 6, "w": 6, "x": 18, "y": 8},
      "type": "stat",
      "title": "Active WebSocket Connections",
      "targets": [
        {
          "expr": "ws_connections_active",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": 0, "color": "red"},
              {"value": 1, "color": "green"}
            ]
          }
        }
      }
    },
    {
      "id": 7,
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 14},
      "type": "timeseries",
      "title": "Database Query Duration (Avg)",
      "targets": [
        {
          "expr": "rate(db_query_duration_seconds_sum{job=~\"tank-royale-api|tank-royale-game\"}[5m]) / rate(db_query_duration_seconds_count{job=~\"tank-royale-api|tank-royale-game\"}[5m])",
          "legendFormat": "{{job}} - {{query_type}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "linear",
            "fillOpacity": 10
          }
        }
      }
    },
    {
      "id": 8,
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 14},
      "type": "timeseries",
      "title": "Game Duration Distribution",
      "targets": [
        {
          "expr": "rate(game_duration_seconds_count[5m])",
          "legendFormat": "Games completed/sec",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "linear",
            "fillOpacity": 10
          }
        }
      }
    },
    {
      "id": 9,
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 22},
      "type": "timeseries",
      "title": "Go Memory Usage",
      "targets": [
        {
          "expr": "go_memstats_alloc_bytes{job=~\"tank-royale-api|tank-royale-game\"}",
          "legendFormat": "{{job}} - Allocated",
          "refId": "A"
        },
        {
          "expr": "go_memstats_heap_inuse_bytes{job=~\"tank-royale-api|tank-royale-game\"}",
          "legendFormat": "{{job}} - Heap In Use",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "bytes",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "linear",
            "fillOpacity": 10
          }
        }
      }
    },
    {
      "id": 10,
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 22},
      "type": "timeseries",
      "title": "Go Goroutines",
      "targets": [
        {
          "expr": "go_goroutines{job=~\"tank-royale-api|tank-royale-game\"}",
          "legendFormat": "{{job}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "linear",
            "fillOpacity": 10
          }
        }
      }
    },
    {
      "id": 11,
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 30},
      "type": "timeseries",
      "title": "Database Query Rate",
      "targets": [
        {
          "expr": "rate(db_query_duration_seconds_count{job=~\"tank-royale-api|tank-royale-game\"}[5m])",
          "legendFormat": "{{job}} - {{query_type}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "qps",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "linear",
            "fillOpacity": 10
          }
        }
      }
    },
    {
      "id": 12,
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 30},
      "type": "timeseries",
      "title": "Database Query Duration (p95)",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, rate(db_query_duration_seconds_bucket{job=~\"tank-royale-api|tank-royale-game\"}[5m]))",
          "legendFormat": "{{job}} - {{query_type}} p95",
          "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.99, rate(db_query_duration_seconds_bucket{job=~\"tank-royale-api|tank-royale-game\"}[5m]))",
          "legendFormat": "{{job}} - {{query_type}} p99",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "linear",
            "fillOpacity": 10
