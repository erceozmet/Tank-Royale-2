{
  "name": "tank-royale-2",
  "version": "1.0.0",
  "description": "Real-time multiplayer battle royale game with advanced system design",
  "private": true,
  "workspaces": [
    "client",
    "server",
    "game-server",
    "shared"
  ],
  "scripts": {
    "install:all": "npm install && npm run install:client && npm run install:server && npm run install:game",
    "install:client": "cd client && npm install",
    "install:server": "cd server && npm install",
    "install:game": "cd game-server && npm install",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:game\" \"npm run dev:client\"",
    "dev:client": "cd client && npm run dev",
    "dev:server": "cd server && npm run dev",
    "dev:game": "cd game-server && npm run dev",
    "build": "npm run build:shared && npm run build:server && npm run build:game && npm run build:client",
    "build:client": "cd client && npm run build",
    "build:server": "cd server && npm run build",
    "build:game": "cd game-server && npm run build",
    "build:shared": "cd shared && npm run build",
    "test": "npm run test:server && npm run test:game",
    "test:server": "cd server && npm run test",
    "test:game": "cd game-server && npm run test",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\""
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "concurrently": "^8.2.0",
    "eslint": "^8.45.0",
    "prettier": "^3.0.0",
    "typescript": "^5.1.6"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
