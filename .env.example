# Server Configuration
NODE_ENV=development
PORT=3000
GAME_SERVER_PORT=3001

# Database - PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=tank_royale
POSTGRES_USER=tank_user
POSTGRES_PASSWORD=your_password_here

# Database - Cassandra
CASSANDRA_HOSTS=localhost
CASSANDRA_PORT=9042
CASSANDRA_KEYSPACE=tank_royale
CASSANDRA_USER=cassandra
CASSANDRA_PASSWORD=cassandra

# Database - Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# pgAdmin (optional, for database management GUI)
PGADMIN_EMAIL=admin@tank.local
PGADMIN_PASSWORD=your_pgadmin_password_here

# JWT Authentication
JWT_SECRET=your_jwt_secret_here_change_in_production
JWT_EXPIRES_IN=7d

# Game Configuration
MAX_LOBBIES=30
PLAYERS_PER_LOBBY=16
SERVER_TICK_RATE=30
MATCHMAKING_TIMEOUT=30000

# AWS Configuration (for production)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
